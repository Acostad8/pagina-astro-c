	.flex-menu li {
		list-style: none;
		display: inline-block;
		/* elementos uno al lado del otro */
		margin-left: 10px;
		/* separar los elementos del menu */
	}
	.menu-rigth {
		color: rgb(221, 214, 214);
		float: left;
		font-family: sans-serif;
		width: 40%;
		margin-top: 8px;
		/* para que el boto se separe de la parte de arriba  */
	}

	.menu-rigth a {
		text-decoration: none;
		color: rgb(221, 214, 214);
		margin: 0 6px;
	}
	.btn-download {
		color: white;
		background-color: #789806;
		display: inline-block;
		padding: 6px 12px;
		font-family: sans-serif;
		text-decoration: none;
		display: inline-flex;
		gap: 8px;
		/* el icono toma solo el ancho del boton para centrarse */
		align-items: center;
		/* centrar el boton y el texto */
	}
	.btn-download:hover {
		background-color: #bdd75e;
	}

	.btn-download svg {
		width: 18px;
	}

	.banner {
		background-color: orangered;
		height: 360px;
	}

	/* 
	se pone posicion relativa al padre para que el hijo tome los limites 
	del padre en posicion absoluta */

	.banner-2 {
		/* position: relative; */
		background-color: purple;
		height: 240px;
	}

	.left-menu {
		float: left;
		z-index: 1;
		left: calc(((100% - 1200px) / 2) - 180px);
		background-color: pink;
		width: 180px;
		height: 360px;
		position: sticky;
		/* para que sea flotante */
		top: 0;
	}

	.banner-3 {
		height: 1200px;
		background-color: turquoise;
	}
