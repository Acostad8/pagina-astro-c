---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="p-0 m-0"> 
		<!-- <slot /> -->
		<header class="h-20 bg-[#161d24]">
			<div class="container max-w-[1200px] mx-auto ">
				<div class="flex-menu   flex items-center w-[60%] h-20 float-left  text-white font-sans uppercase top-0   ">
					<img class="w-40"
						src="https://store.akamai.steamstatic.com/public/shared/images/header/logo_steam.svg?t=962016"
						alt=""
	-			/>
					<menu>
						<li><a class="hover:text-white text-[#d6c9c9] font-semibold no-underline" href="#">Tienda</a></li>
						<li><a class="hover:text-white text-[#d6c9c9] font-semibold no-underline" href="#">Comunidad</a></li>
						<li><a class="hover:text-white text-[#d6c9c9] font-semibold no-underline" href="#">Acerca de</a></li>
						<li><a class="hover:text-white text-[#d6c9c9] font-semibold no-underline" href="#">Soporte</a></li>
					</menu>
				</div>
				<div class="menu-rigth ">
					<a href="#" class="btn-download">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							fill="none"
							viewBox="0 0 24 24"
							stroke-width="1.5"
							stroke="currentColor"
							class="size-6"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3"
							></path>
						</svg>
						Intalar Steam
					</a>
					<a href="#">Iniciar Sesion</a>
					|
					<a href="#">Idioma</a>
				</div>
			</div>
		</header>

		<div class="banner"></div>

		<!-- 
		se poner container para que tambien tenga las propiedades del container -->
		<div class="left-menu"></div>
		<div class="banner-2 container max-w-[1200px] mx-auto"></div>

		<div class="banner-3 "></div>

		<div
			class="group items-center hover:cursor-pointer duration-300 transition-colors hover:bg-blue-600 rounded py-2 px-4 text-white inline-flex bg-blue-500"
		>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				fill="none"
				viewBox="0 0 24 24"
				stroke-width="1.5"
				stroke="currentColor"
				class="size-4 mr-1 mt-1 group-hover:animate-spin"
			>
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99"
				></path>
			</svg>

			presioname!

			<svg
				xmlns="http://www.w3.org/2000/svg"
				fill="none"
				viewBox="0 0 24 24"
				stroke-width="1.5"
				stroke="currentColor"
				class="size-4 mt-[4px] ml-1"
			>
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"></path>
			</svg>

		</div>
	</body>
</html>

